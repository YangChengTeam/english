<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:eng="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/primaryDark"
              android:orientation="vertical">

    <com.yc.junior.english.base.view.MainToolBar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.yc.junior.english.base.view.MainToolBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/setting_item_bg"
        android:orientation="vertical"
        >
        <!--<com.yc.junior.english.setting.view.widgets.SettingItemView-->
            <!--android:id="@+id/si_play"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="45dp"-->
