<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:eng="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primaryDark"
                android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/setting_head_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp"
            android:src="@drawable/sample_avatar"/>


        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_ivatar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="萌了个乘乘"
            android:textColor="@color/white"
            android:textSize="@dimen/font_big"/>

        <TextView
            android:id="@+id/tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nickname"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="洪山区第一小学"
            android:textColor="@color/white"
            android:textSize="@dimen/font_big"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_head"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@mipmap/setting_item_bg"
            android:orientation="vertical"
            >

            <com.yc.english.setting.view.widgets.MenuItemView
                android:id="@+id/miv_weixin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                eng:src="@mipmap/setting_weixin"
                eng:text="@string/setting_weixin"></com.yc.english.setting.view.widgets.MenuItemView>

            <com.yc.english.setting.view.widgets.MenuItemView
                android:id="@+id/miv_qq"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                eng:src="@mipmap/setting_qq"
                eng:text="@string/setting_qq"></com.yc.english.setting.view.widgets.MenuItemView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/setting_item_bg"
            android:orientation="vertical"
            >

            <com.yc.english.setting.view.widgets.MenuItemView
                android:id="@+id/miv_feedback"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                eng:src="@mipmap/setting_feedback"
                eng:text="@string/setting_feedback"></com.yc.english.setting.view.widgets.MenuItemView>

            <com.yc.english.setting.view.widgets.MenuItemView
                android:id="@+id/miv_share"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                eng:src="@mipmap/setting_share"
                eng:text="@string/setting_share"></com.yc.english.setting.view.widgets.MenuItemView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/setting_menu_item_bg"
            >

            <com.yc.english.setting.view.widgets.MenuItemView
                android:id="@+id/miv_setting"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                eng:src="@mipmap/setting_setting"
                eng:text="@string/setting_setting"></com.yc.english.setting.view.widgets.MenuItemView>
        </LinearLayout>

    </LinearLayout>

    <com.yc.english.base.view.TransparentToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"></com.yc.english.base.view.TransparentToolBar>

</RelativeLayout>