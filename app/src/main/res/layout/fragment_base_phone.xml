<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/phone_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/t5dp"
    android:paddingRight="@dimen/t5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tint"
        android:textColor="@color/purple_b4770a"
        android:textSize="@dimen/t22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t10dp"
        android:text="@string/phone_tint"
        android:textColor="@color/purple_b4770a"
        android:textSize="@dimen/t12sp" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/t40dp"
        android:layout_marginRight="@dimen/t40dp"
        android:layout_marginTop="@dimen/t15dp"
        android:background="@mipmap/phone_edit_bg"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="@dimen/t5dp"
        android:paddingRight="@dimen/t5dp"
        android:textColor="@color/purple_b4770a"
        android:textColorHint="@color/purple_b4770a"
        android:textSize="@dimen/t13sp" />

    <ImageView
        android:id="@+id/iv_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t15dp"
        android:src="@mipmap/phone_confirm" />

</LinearLayout>