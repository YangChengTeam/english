<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/group_distance_5">

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.There is hardly any rain this summer,___?"
        android:textColor="@color/black_333"
        android:textSize="@dimen/group_text_14" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sub_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/group_distance_10"
        android:layout_marginTop="@dimen/group_distance_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/correct_answer"
            android:textColor="@color/black"
            android:textSize="@dimen/group_text_16" />

        <TextView
            android:id="@+id/tv_topic_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/group_distance_5"
            android:text="D"
            android:textColor="@color/accent"
            android:textSize="@dimen/group_text_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_topic_analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/group_distance_10"
        android:lineSpacingExtra="@dimen/group_distance_2"
        android:text="[解析]：此题陷阱选项为A或B或C。选A或C的考生是由于没有注意到hardly这个词二草率做题造成的；选B的考生注意到了hardly这个半否定词，但却忽视了这是一个there be结构。所以正确答案是D。"
        android:textColor="@color/accent"
        android:textSize="@dimen/group_text_12" />

</LinearLayout>