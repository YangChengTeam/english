<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/group_actionbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/group_gray_e6f2fb"
        android:paddingTop="@dimen/group_distance_10" />

    <TextView
        android:id="@+id/tv_share_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/group_distance_45"
        android:background="@color/group_blue_21b5f8"
        android:gravity="center"
        android:text="@string/share_group"
        android:textColor="@color/white"
        android:textSize="@dimen/group_text_16" />


</LinearLayout>