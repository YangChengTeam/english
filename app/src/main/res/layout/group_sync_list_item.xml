<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/group_distance_05"
        android:background="@color/group_gary_ddd" />

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/group_distance_55"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/group_distance_15"
        android:paddingRight="@dimen/group_distance_30">

        <ImageView
            android:id="@+id/m_iv_group_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/group_distance_20"
            android:src="@drawable/group_delete_member_selector" />

        <ImageView
            android:id="@+id/m_iv_group_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_avatar" />

        <TextView
            android:id="@+id/m_tv_group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/group_distance_15"
            android:layout_weight="1"
            android:text="蔡同学"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/group_text_16" />

    </LinearLayout>

</LinearLayout>