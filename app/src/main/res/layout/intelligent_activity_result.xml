<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/mToolbarWarpper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View
                android:id="@+id/mStatusBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent2"></View>

            <LinearLayout
                android:id="@+id/mToolbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/mBackBtn"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@drawable/base_tran_ripple_bg"
                        android:scaleType="center"
                        android:src="@mipmap/intelligent_back"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="练习成绩"
                        android:textColor="@color/black_333"
                        android:textSize="@dimen/font_large"/>

                    <ImageView
                        android:id="@+id/mShareBtn"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/base_tran_ripple_bg"
                        android:scaleType="center"
                        android:src="@mipmap/setting_honour_share"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/gray_ddd"
                        android:visibility="visible"></View>

                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mRightTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="对 题"
                android:textColor="@color/black_333"
                android:textSize="@dimen/font_normal"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_aaa"
                ></View>

            <TextView
                android:id="@+id/mErrorTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="错 题"
                android:textColor="@color/black_333"
                android:textSize="@dimen/font_normal"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/group_orange_ff9a00"
            >

            <TextView
                android:id="@+id/mViewBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/base_tran_ripple_bg"
                android:text="查看解析"
                android:gravity="center"
                android:textColor="@color/white"
                android:clickable="true"
                android:textSize="@dimen/font_big"/>
        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_ddd"
            ></View>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/primary"
            android:gravity="center">

            <TextView
                android:id="@+id/mBackBtn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/base_tran_ripple_bg"
                android:gravity="center"
                android:clickable="true"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/font_big"
                />
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>