<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/m_et_issue_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:minHeight="@dimen/group_distance_50"
        android:paddingBottom="@dimen/group_distance_15"
        android:paddingLeft="@dimen/group_distance_15"
        android:paddingRight="@dimen/group_distance_15"
        android:paddingTop="@dimen/group_distance_15"
        android:textColor="@color/black_333333"
        android:textColorHint="@color/group_gray_999"
        android:textSize="@dimen/group_text_16" />

    <include layout="@layout/group_common_divider" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/group_distance_15"
        android:layout_marginTop="@dimen/group_distance_10" />

    <LinearLayout
        android:id="@+id/ll_task_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerView"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/group_distance_10"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_look_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/group_text_14" />

        <ImageView
            android:id="@+id/iv_look_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/group_distance_5"
            android:src="@mipmap/group68" />
    </LinearLayout>

</LinearLayout>