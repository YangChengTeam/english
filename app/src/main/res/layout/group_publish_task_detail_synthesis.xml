<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/m_et_issue_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:minHeight="@dimen/group_distance_50"
        android:paddingBottom="@dimen/group_distance_15"
        android:paddingLeft="@dimen/group_distance_15"
        android:paddingRight="@dimen/group_distance_15"
        android:paddingTop="@dimen/group_distance_15"
        android:textColor="@color/black_333333"
        android:textColorHint="@color/group_gray_999"
        android:textSize="@dimen/group_text_16" />

    <LinearLayout
        android:id="@+id/ll_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/group_common_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/group_distance_50"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/group_distance_15">

            <ImageView
                android:id="@+id/m_iv_issue_picture_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/group25" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_picture_base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/group_distance_15" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/group_common_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/group_distance_5"
            android:gravity="center_vertical"
            android:minHeight="@dimen/group_distance_50"
            android:paddingLeft="@dimen/group_distance_15"
            android:paddingRight="@dimen/group_distance_25">

            <ImageView
                android:id="@+id/m_iv_issue_voice_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/group26" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/voice_recyclerView_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/group_distance_15"
                android:gravity="center_vertical" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/group_common_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/group_distance_5"
            android:gravity="center_vertical"
            android:minHeight="@dimen/group_distance_50"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/group_distance_15"
            android:paddingRight="@dimen/group_distance_25">

            <ImageView
                android:id="@+id/m_iv_issue_file_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/group27" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/file_recyclerView_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/group_distance_15" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>