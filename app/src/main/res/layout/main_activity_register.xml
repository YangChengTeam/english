<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/main_login_top_bg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_height"
                android:layout_marginTop="@dimen/spacing_big"
                android:background="@drawable/main_editview_bg">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:src="@mipmap/main_login_user"
                    />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:background="#00000000"
                    android:hint="@string/main_login_username"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="@dimen/font_normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_height"
                android:layout_marginTop="@dimen/spacing_big"
                android:background="@drawable/main_editview_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:src="@mipmap/main_login_checkcode"
                    />

                <EditText
                    android:id="@+id/et_checkcode"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:background="#00000000"
                    android:hint="@string/main_check_code"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="@dimen/font_normal"/>

                <TextView
                    android:id="@+id/tv_checkcode"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/primary"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="@string/main_checkcode"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_height"
                android:layout_marginTop="@dimen/spacing_big"
                android:background="@drawable/main_editview_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:src="@mipmap/main_login_passwrod"
                    />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:background="#00000000"
                    android:hint="@string/main_login_password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="@dimen/font_normal"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_regiter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_height"
                android:layout_marginTop="@dimen/spacing_big"
                android:background="@drawable/group_btn_blue_bg"
                android:text="@string/main_regiter"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal"/>
        </LinearLayout>
    </LinearLayout>

    <com.yc.english.base.view.TransparentToolBar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"></com.yc.english.base.view.TransparentToolBar>
</RelativeLayout>