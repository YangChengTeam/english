<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbarWarpper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_toolbar"
    android:paddingTop="@dimen/status_bar_height">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_sub"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/iv_left_icon"
            android:layout_width="@dimen/t20dp"
            android:layout_height="@dimen/t20dp"
            android:src="@mipmap/base_back" />

        <TextView
            android:id="@+id/tv_tb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/t20sp" />

        <LinearLayout
            android:id="@+id/toolbar_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/t15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/index_phogetic_introduce" />

            <TextView
                android:id="@+id/tv_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t5dp"
                android:text="@string/vip_equities"
                android:textColor="@color/white"
                android:textSize="@dimen/t10sp" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

</FrameLayout>