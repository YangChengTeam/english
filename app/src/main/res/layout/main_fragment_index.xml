<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:eng="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/primaryDark"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/toolbar_padding_top">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/main_game"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/main_logo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/main_share"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/main_share"
                    android:textColor="@color/black_333"
                    android:textSize="@dimen/font_snormal"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        eng:indicator_height="6dp"
        eng:indicator_margin="5dp"
        eng:indicator_width="6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginBottom="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.yc.english.main.view.wdigets.IndexMenuView
                    android:id="@+id/im_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    eng:desc="@string/main_read_desc"
                    eng:src="@mipmap/main_read"
                    eng:text="@string/main_read">
                </com.yc.english.main.view.wdigets.IndexMenuView>

                <com.yc.english.main.view.wdigets.IndexMenuView
                    android:id="@+id/im_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    eng:desc="@string/main_task_desc"
                    eng:src="@mipmap/main_task"
                    eng:text="@string/main_task">
                </com.yc.english.main.view.wdigets.IndexMenuView>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.yc.english.main.view.wdigets.IndexMenuView
                    android:id="@+id/im_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    eng:desc="@string/main_word_desc"
                    eng:src="@mipmap/main_word"
                    eng:text="@string/main_word">
                </com.yc.english.main.view.wdigets.IndexMenuView>

                <com.yc.english.main.view.wdigets.IndexMenuView
                    android:id="@+id/im_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    eng:desc="@string/main_game_desc"
                    eng:src="@mipmap/main_game"
                    eng:text="@string/main_game">
                </com.yc.english.main.view.wdigets.IndexMenuView>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/tv_china"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/main_china"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/tv_teacher_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@id/tv_china"
                android:gravity="center_vertical"
                android:text="2511"
                android:textColor="@color/primary"
                android:textSize="@dimen/font_larger"

                />

            <TextView
                android:id="@+id/tv_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/tv_teacher_number"
                android:gravity="center_vertical"
                android:text="@string/main_teacher"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tv_student_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_teacher_number"
                android:layout_alignRight="@+id/tv_teacher_number"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="38541"
                android:textColor="@color/accent"
                android:textSize="@dimen/font_larger"/>
            <TextView
                android:id="@+id/tv_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_below="@id/tv_teacher"
                android:layout_alignLeft="@+id/tv_teacher"
                android:gravity="center_vertical"
                android:text="@string/main_student"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="8dp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>