<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/tab_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab_line"
            android:background="@color/white">

            <com.yc.english.main.view.wdigets.TabItem
                android:id="@+id/item_index"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                gb:src="@mipmap/main_tab_index_selected"
                gb:text="@string/main_tab_index"></com.yc.english.main.view.wdigets.TabItem>

            <com.yc.english.main.view.wdigets.TabItem
                android:id="@+id/item_task"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                gb:src="@mipmap/main_tab_task"
                gb:text="@string/main_tab_task"></com.yc.english.main.view.wdigets.TabItem>


            <com.yc.english.main.view.wdigets.TabItem
                android:id="@+id/item_my"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                gb:src="@mipmap/main_tab_my"
                gb:text="@string/main_tab_my"></com.yc.english.main.view.wdigets.TabItem>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>