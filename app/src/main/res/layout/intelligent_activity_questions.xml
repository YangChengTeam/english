<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.yc.english.intelligent.view.wdigets.IntelligentActionbar
        android:id="@+id/mToolbarWarpper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.yc.english.intelligent.view.wdigets.IntelligentActionbar>

    <FrameLayout
        android:id="@+id/mDescView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>