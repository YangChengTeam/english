<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/group_message_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/group_distance_10"
        android:paddingLeft="@dimen/group_distance_15"
        android:paddingTop="@dimen/group_distance_15">

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7月11号英语作业题"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/group_text_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/group_distance_10">

            <TextView
                android:id="@+id/tv_message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:text="知识点考察：Star teacher\nUnit 1Good momn"
                android:textColor="@color/group_gray_999"
                android:textSize="@dimen/group_text_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/group_distance_5"
                android:src="@mipmap/group_message_icon" />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_message_type"
        android:layout_width="@dimen/group_distance_60"
        android:layout_height="@dimen/group_distance_25"
        android:layout_marginTop="@dimen/group_distance_10"
        android:background="@drawable/group_custom_message_type"
        android:gravity="center"
        android:text="@string/homework"
        android:textColor="@color/white"
        android:textSize="@dimen/group_text_12" />

</LinearLayout>