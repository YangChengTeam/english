<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDark"
    android:orientation="vertical">

    <com.yc.junior.english.base.view.MainToolBar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/et_context"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/setting_item_bg"
        android:gravity="top|left"
        android:hint="@string/setting_hint_feedback"
        android:inputType="textMultiLine"
        android:maxLines="6"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:textSize="@dimen/font_normal" />

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/group_btn_blue_bg"
        android:text="@string/setting_complete"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/setting_tel"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_wx"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="客服微信: "
                    android:textColor="@color/black_333"
                    android:textSize="@dimen/t18sp" />

                <TextView
                    android:id="@+id/tv_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="  nuanjiguiren886"
                    android:textColor="@color/black_333"
                    android:textSize="@dimen/t20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="客服电话:"
                    android:textColor="@color/black_333"
                    android:textSize="@dimen/t18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="   13164125027"
                    android:textColor="@color/black_333"
                    android:textSize="@dimen/t20sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:lineSpacingExtra="@dimen/t3dp"
        android:text="友情提示："
        android:textColor="@color/group_red_fb4c30"
        android:textSize="@dimen/t16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="@dimen/t5dp"
        android:text="1.如果您购买会员后，想更换手机或在其他手机上使用本软件，绑定手机号码就可以了哦！"
        android:textColor="@color/black"
        android:textSize="@dimen/t16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="@dimen/t5dp"
        android:text="绑定手机号步骤：打开“个性学习”页面，点开“系统设置”里面的“绑定手机号”，按相应提示操作即可。"
        android:textColor="@color/black"
        android:textSize="@dimen/t16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="@dimen/t5dp"
        android:text="2.很多亲在使用时，发现课本正常点读，但没有声音，这时请打开手机设置页面，有个声音选项，点选后，调整系统声音，就能放大和听到声音了。"
        android:textColor="@color/black"
        android:textSize="@dimen/t16sp" />
</LinearLayout>