<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/primaryDark"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_word_detail_audio"
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="6dp"
            android:src="@mipmap/read_word_default"/>

        <TextView
            android:id="@+id/tv_en_word_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="I just took her book home and let him play"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cn_word_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="@dimen/dp_10"
        android:text="我只是把她的书带回家，让他去玩了"
        android:textColor="@color/gray_aaa"
        android:textSize="@dimen/sp_14"/>
</LinearLayout>