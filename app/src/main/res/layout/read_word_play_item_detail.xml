<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:background="@color/primaryDark"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginTop="16dp"
        android:src="@mipmap/read_word_audio"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_en_word_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I just took her book home and let him play"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_cn_word_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="我只是把她的书带回家，让他去玩了"
            android:textColor="@color/gray_aaa"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>
</LinearLayout>