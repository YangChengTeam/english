<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/group_distance_05"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/group_distance_10"
        android:layout_marginLeft="@dimen/group_distance_15"
        android:layout_marginRight="@dimen/group_distance_15"
        android:background="@drawable/group_group_manager_bg"
        android:gravity="center_vertical"
        android:padding="@dimen/group_distance_15">

        <ImageView
            android:id="@+id/m_iv_task_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/group36" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/group_distance_15"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/m_tv_task_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-07-19 周三 19:56:45"
                android:textColor="@color/group_gray_999"
                android:textSize="@dimen/group_text_14" />

            <TextView
                android:id="@+id/m_tv_task_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/group_distance_10"
                android:text="背诵课文，家长签字"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/group_text_16" />

            <LinearLayout
                android:id="@+id/m_ll_task_extra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/group_distance_10"
                android:orientation="horizontal"
                android:visibility="gone"></LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/group4" />

    </LinearLayout>


</LinearLayout>