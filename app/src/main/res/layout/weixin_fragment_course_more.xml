<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yc.english.base.view.MainToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.yc.english.base.view.MainToolBar>

    <com.shizhefei.view.indicator.FixedIndicatorView
        android:id="@+id/fiv_indicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"></com.shizhefei.view.indicator.FixedIndicatorView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_ddd"></View>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryDark"></android.support.v4.view.ViewPager>
</LinearLayout>