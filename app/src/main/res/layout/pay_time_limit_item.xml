<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:layout_marginRight="@dimen/t8dp">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pay_way_new_selector"
        android:padding="@dimen/t3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pay_new_bg"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/t3dp"
            android:paddingLeft="@dimen/t5dp"
            android:paddingRight="@dimen/t3dp"
            android:paddingTop="@dimen/t20dp">

            <TextView
                android:id="@+id/tv_origin_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原价：59"
                android:textColor="@color/gray_8e8e8e"
                android:textSize="@dimen/t10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/t2dp"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/red_db4d2a"
                    android:textSize="@dimen/t12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="399"
                    android:textColor="@color/red_db4d2a"
                    android:textSize="@dimen/t14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pay_time_limit_bg" />

        <TextView
            android:id="@+id/tv_time_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/orange_bc4022"
            android:textSize="@dimen/t12sp"
            tools:text="1个月" />

    </RelativeLayout>
</RelativeLayout>