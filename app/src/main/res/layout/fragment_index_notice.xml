<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/share_vip_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/t20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公告"
        android:textColor="@color/black"
        android:textSize="@dimen/t16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t15dp"
        android:lineSpacingExtra="@dimen/t5dp"
        android:text="尊敬的用户您好！\n
       因产品结构升级调整中，目前单词宝典和课本点读功能无法使用，敬请谅解！" />

    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t20dp"
        android:background="@drawable/group_btn_blue_bg"
        android:paddingBottom="@dimen/t8dp"
        android:paddingLeft="@dimen/t30dp"
        android:paddingRight="@dimen/t30dp"
        android:paddingTop="@dimen/t8dp"
        android:text="朕知道了"
        android:textColor="@color/white" />

</LinearLayout>