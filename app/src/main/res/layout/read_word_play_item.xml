<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="4dp"
              android:layout_marginTop="4dp"
              android:background="@mipmap/read_word_item_normal"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_word_number"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/gray_aaa"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_en_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book"
            android:textColor="@color/black_333"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/tv_cn_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="书，书本"
            android:textColor="@color/gray_aaa"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_read_word_audio"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="right|center"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_read_word"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@mipmap/read_word_default"/>
    </LinearLayout>
</LinearLayout>