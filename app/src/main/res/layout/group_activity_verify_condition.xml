<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yc.english.base.view.TaskToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/group_gray_e6f2fb"
        android:orientation="vertical"
        android:paddingTop="@dimen/group_distance_10">

        <include layout="@layout/group_common_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/m_rl_all_allow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/group_distance_55"
                android:paddingLeft="@dimen/group_distance_15"
                android:paddingRight="@dimen/group_distance_35">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/all_allow"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/group_text_16" />


                <RadioButton
                    android:id="@+id/m_rb_all_allow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/group_delete_member_selector"
                    android:checked="true" />

            </RelativeLayout>

            <include layout="@layout/group_common_divider" />

            <RelativeLayout
                android:id="@+id/m_rl_all_forbid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/group_distance_55"
                android:paddingLeft="@dimen/group_distance_15"
                android:paddingRight="@dimen/group_distance_35">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/all_forbid"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/group_text_16" />


                <RadioButton
                    android:id="@+id/m_rb_all_forbid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/group_delete_member_selector" />

            </RelativeLayout>

            <include layout="@layout/group_common_divider" />

            <RelativeLayout
                android:id="@+id/m_rl_verify_join"
                android:layout_width="match_parent"
                android:layout_height="@dimen/group_distance_55"
                android:paddingLeft="@dimen/group_distance_15"
                android:paddingRight="@dimen/group_distance_35">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/verify_join"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/group_text_16" />


                <RadioButton
                    android:id="@+id/m_rb_verify_join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/group_delete_member_selector" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>