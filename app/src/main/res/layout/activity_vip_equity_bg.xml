<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.7">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@mipmap/vip_equity_bg"
        android:orientation="vertical"
        app:layout_scrollFlags="scroll|enterAlways">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@mipmap/default_big_avatar" />


        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/group_distance_5">

            <Button
                android:id="@+id/btn_open_vip"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/general_btn_selector"
                android:text="@string/open_vip"
                android:textColor="@color/general_vip_d39200"
                android:textSize="@dimen/group_text_16" />

            <LinearLayout
                android:id="@+id/ll_vip_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/group_distance_5"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/vip_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/vip_vip" />

                <TextView
                    android:id="@+id/tv_vip_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/group_distance_5"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />


            </LinearLayout>

        </FrameLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>