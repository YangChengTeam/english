<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/group_distance_15"
                android:background="#F5F5F5" />

            <ImageView
                android:id="@+id/iv_advantage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/group_distance_15"
                    android:layout_marginRight="@dimen/group_distance_15"
                    android:layout_marginTop="@dimen/group_distance_15"
                    android:background="@drawable/tutorship_blue_bg"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/group_distance_10"
                    android:paddingTop="@dimen/group_distance_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <View
                            android:layout_width="40dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="@dimen/group_distance_10" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/group_distance_10"
                            android:layout_weight="1"
                            android:text="培训班、家教"
                            android:textColor="@color/white"
                            android:textSize="@dimen/group_text_16" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/group_distance_10"
                            android:layout_marginRight="@dimen/group_distance_10"
                            android:layout_weight="1"
                            android:text="说说英语提分辅导"
                            android:textColor="@color/white"
                            android:textSize="@dimen/group_text_16" />
                    </LinearLayout>

                    <com.yc.junior.english.vip.views.widget.TutorshipDetailView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:bad_content="华而不实的口语训练，
单个作业题目辅导，
课外课程学习"
                        app:good_content="紧贴教学大纲，听、说、
读、写四位一体学习，专
为考试提分辅导"
                        app:title="内容"

                        app:title_bg_color="#FB7474" />

                    <com.yc.junior.english.vip.views.widget.TutorshipDetailView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/group_distance_10"
                        app:bad_content="每周一次集中辅导，
每次二到三个小时，
内容集中难以消化"
                        app:good_content="每天学习十分钟，碎片
化时间学习，积累和渐
进式掌握知识"
                        app:title="方式"
                        app:title_bg_color="#5FDB28" />

                    <com.yc.junior.english.vip.views.widget.TutorshipDetailView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/group_distance_10"
                        app:bad_content="个体优劣不一，发挥
不稳定，各老师教学
方式不一"
                        app:good_content="人工智能分析学生大
数据，配以一流讲师
团队，个性化教学"
                        app:title="师资"
                        app:title_bg_color="#FFA63D" />

                    <com.yc.junior.english.vip.views.widget.TutorshipDetailView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/group_distance_10"
                        app:bad_content="上完课就结束，单次
学习，时效短"
                        app:good_content="随时随地学习，重复
学习，时效长"
                        app:title="形式"
                        app:title_bg_color="#DB28D9" />

                    <com.yc.junior.english.vip.views.widget.TutorshipDetailView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/group_distance_10"
                        app:bad_content="
平均每月800-1000元
每节课50-100元"
                        app:good_content="平均每月50-60元
每节课10元"
                        app:title="价格"
                        app:title_bg_color="#4DC9FF" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/vip_tutorship_monologue" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/group_distance_15"
                android:background="#F5F5F5" />

            <ImageView
                android:id="@+id/iv_tutorship_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/group_distance_15"
                android:background="#F5F5F5" />

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:background="@color/white"
                android:lineSpacingExtra="@dimen/dp_2"
                android:padding="@dimen/dp_10"
                android:text="提分过程：根据学习进度选择同步微课观看，完成每单元智能测评，查看测评报告，总结每单元的学习，完成个性学习方案，继续下一单元学习，每天坚持十分钟，考试提高二十分！"
                android:textColor="@color/black_333"
                android:textSize="@dimen/group_text_14"
                android:typeface="sans" />

            <include
                layout="@layout/fragment_vip_tutorship_detail_bottom"
                android:visibility="gone" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>