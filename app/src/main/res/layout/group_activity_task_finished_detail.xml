<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/group_gray_e6f2fb"
    android:orientation="vertical">

    <com.yc.english.base.view.TaskToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.yc.english.base.view.StateView
        android:id="@+id/stateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:id="@+id/sl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/group_distance_15"
            android:paddingRight="@dimen/group_distance_15"
            android:paddingTop="@dimen/group_distance_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/group_group_manager_bg"
                android:minHeight="@dimen/group_distance_110"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/group_distance_60"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/group_distance_15">

                    <ImageView
                        android:id="@+id/m_iv_task_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/group36" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/group_distance_20"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/issue_time"
                            android:textColor="@color/group_gray_999"
                            android:textSize="@dimen/group_text_14" />

                        <TextView
                            android:id="@+id/m_tv_task_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/group_distance_5"
                            android:text="2017-07-19 15:36:45"
                            android:textColor="@color/group_gray_999"
                            android:textSize="@dimen/group_text_14" />
                    </LinearLayout>

                </LinearLayout>

                <include layout="@layout/group_common_divider" />

                <com.yc.english.group.view.widget.MultifunctionLinearLayout
                    android:id="@+id/publish_multifunctionLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/group_distance_10"
                android:background="@drawable/group_group_manager_bg"
                android:minHeight="@dimen/group_distance_50"
                android:orientation="vertical">

                <include layout="@layout/group_common_divider" />

                <com.yc.english.group.view.widget.MultifunctionLinearLayout
                    android:id="@+id/do_multifunctionLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/group_distance_90"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/group_distance_10"
                android:background="@drawable/group_group_manager_bg"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/grade"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/group_text_16" />

                <RadioGroup
                    android:id="@+id/m_rg_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/group_distance_40"
                    android:layout_marginRight="@dimen/group_distance_30"
                    android:layout_marginTop="@dimen/group_distance_10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/m_rb_a_extra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/group_score_a_extra_bg" />

                    <RadioButton
                        android:id="@+id/m_rb_a"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/group_score_a_bg" />

                    <RadioButton
                        android:id="@+id/m_rb_b_extra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/group_score_b_extra_bg" />

                    <RadioButton
                        android:id="@+id/m_rb_b"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/group_score_b_bg" />

                    <RadioButton
                        android:id="@+id/m_rb_c"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/group_score_c_bg" />

                </RadioGroup>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>