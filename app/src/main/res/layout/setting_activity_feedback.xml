<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/primaryDark">

    <com.yc.english.base.view.MainToolBar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.yc.english.base.view.MainToolBar>

    <EditText
    android:id="@+id/et_password"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp"
    android:background="@drawable/setting_item_bg"
    android:inputType="textMultiLine"
    android:paddingTop="10dp"
    android:maxLines="6"
    android:gravity="top|left"
    android:hint="@string/setting_hint_feedback"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:textSize="@dimen/font_normal"
    android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_height"
        android:background="@drawable/group_btn_blue_bg"
        android:text="@string/setting_complete"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>