<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/group_distance_40"
        android:paddingLeft="@dimen/group_distance_10"
        android:paddingRight="@dimen/group_distance_10">

        <ImageView
            android:id="@+id/m_iv_forbid"
            android:layout_width="@dimen/group_distance_30"
            android:layout_height="@dimen/group_distance_30"
            android:layout_centerVertical="true"
            android:src="@mipmap/default_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/group_distance_5"
            android:layout_toRightOf="@id/m_iv_forbid"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/m_tv_forbid_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘曼"
                android:textColor="@color/black_333"
                android:textSize="@dimen/group_text_14" />

            <TextView
                android:id="@+id/m_tv_forbid_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约4分钟后解除禁言"
                android:textColor="@color/group_gray_999"
                android:textSize="@dimen/group_text_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/m_tv_stop_forbid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/group_forbig_bg"
            android:paddingBottom="@dimen/group_distance_2"
            android:paddingLeft="@dimen/group_distance_10"
            android:paddingRight="@dimen/group_distance_10"
            android:paddingTop="@dimen/group_distance_2"
            android:text="@string/stop_forbid"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/group_text_14" />

    </RelativeLayout>

</LinearLayout>