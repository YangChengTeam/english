<resources>

    <!-- Base application theme. -->
    <!--Theme.AppCompat.Light.NoActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="TaskToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/primary</item>
    </style>

    <style name="share_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/tup</item>
        <item name="android:windowExitAnimation">@anim/tdown</item>
    </style>

    <style name="group_btn_blue_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/group_btn_blue_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/group_text_16</item>
    </style>

    <style name="group_btn_yellow_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/group_btn_yellow_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/group_text_16</item>
    </style>

    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>


    <style name="ToolBar" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:gravity">center</item>
    </style>

    <style name="seekbar_style" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress_bg</item>
        <item name="android:thumb">@drawable/seekbar_themb_bg</item>
    </style>

    <style name="tabLayout_style">
        <item name="android:textSize">@dimen/group_text_18</item>
    </style>

    <style name="collapsedTitleTextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="vip_style">
        <item name="android:windowEnterAnimation">@anim/vip_in_ainm</item>
        <item name="android:windowExitAnimation">@anim/vip_out_ainm</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="composition_tab_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
