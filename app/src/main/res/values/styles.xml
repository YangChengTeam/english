<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="TaskToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/primary</item>
    </style>

    <style name="share_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/tup</item>
        <item name="android:windowExitAnimation">@anim/tdown</item>
    </style>

    <style name="group_btn_blue_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/group_btn_blue_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/group_text_16</item>
    </style>

    <style name="group_btn_white_style"  parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/group_btn_white_bg</item>
        <item name="android:textColor">@color/group_blue_21b5f8</item>
        <item name="android:textSize">@dimen/group_text_16</item>
    </style>

    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>
