<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.yc.english">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".EnglishApp"
        android:allowBackup="true"
        android:icon="@mipmap/lanucher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".main.view.activitys.MainActivity"
            android:theme="@style/AppTheme" />

        <activity android:name=".main.view.activitys.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".main.view.activitys.LoginActivity">

        </activity>

        <activity
            android:name=".read.view.activitys.BookActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".read.view.activitys.CoursePlayActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".read.view.activitys.AddBookActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".read.view.activitys.BookUnitActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".read.view.activitys.WordUnitActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".read.view.activitys.ReadWordActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".read.view.activitys.WordPracticeActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".group.view.activitys.GroupCreateActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".group.view.activitys.GroupJoinActivity" />

        <!--会话界面-->
        <activity
            android:name=".group.view.activitys.ChatActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="com.yc.english"
                    android:pathPrefix="/conversation/"
                    android:scheme="rong" />
            </intent-filter>
        </activity>
        <!--会话列表-->
        <activity
            android:name=".group.view.activitys.ChatListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="com.yc.english"
                    android:pathPrefix="/conversationlist"
                    android:scheme="rong" />
            </intent-filter>
        </activity>
        <activity
            android:name=".group.view.activitys.FileActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".group.view.activitys.GroupMemberActivity" />
        <activity android:name=".group.view.activitys.GroupManagerActivity" />
        <activity android:name=".group.view.activitys.GroupChangeNameActivity" />
        <activity android:name=".group.view.activitys.GroupDeleteMemberActivity" />
        <activity android:name=".group.view.activitys.GroupTransferActivity" />
        <activity android:name=".group.view.activitys.GroupIssueTaskActivity" />
        <activity android:name=".group.view.activitys.GroupSyncListActivity" />
        <activity android:name=".group.view.activitys.GroupMyTaskDetailActivity" />
        <activity android:name=".group.view.activitys.GroupPublishTaskListActivity" />
        <activity android:name=".group.view.activitys.GroupTaskItemActivity" />
        <activity android:name=".group.view.activitys.GroupVerifyActivity" />
        <activity android:name=".group.view.activitys.GroupVerifyConditionActivity" />
        <activity android:name=".group.view.activitys.GroupListJoinActivity" />
        <activity android:name=".group.view.activitys.GroupTaskFinishDetailActivity" />
        <activity android:name=".group.view.activitys.GroupTaskItemLookActivity" />
        <activity android:name=".group.view.activitys.GroupMyTaskListActivity"/>

        <receiver
            android:name=".group.view.receiver.GroupNotificationReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="io.rong.push.intent.MESSAGE_ARRIVED" />
                <action android:name="io.rong.push.intent.MI_MESSAGE_ARRIVED" />
                <action android:name="io.rong.push.intent.MESSAGE_CLICKED" />
                <action android:name="io.rong.push.intent.MI_MESSAGE_CLICKED" />
            </intent-filter>
        </receiver>

        <activity android:name=".setting.view.activitys.SettingActivity" />
        <activity android:name=".setting.view.activitys.FeedbackActivity" />
        <activity android:name=".setting.view.activitys.PersonCenterActivity" />
        <activity android:name=".main.view.activitys.RegisterActivity" />
        <activity android:name=".main.view.activitys.ForgotActivity" />
        <activity android:name=".setting.view.activitys.ModifyPasswordActivity" />
        <activity android:name=".setting.view.activitys.NameSettingActivity" />

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="59719ccc04e20564f70004b6" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="freestyle" />
    </application>

</manifest>